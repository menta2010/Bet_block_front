{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    // === ALIAS ===
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@src/*": ["src/*"]
    },

    // === TIPOS DO EXPO ROUTER ===
    "types": ["expo", "expo-router"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
